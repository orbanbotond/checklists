.page-header
  h1
    - if @quick_search.search_term.present?
      | Your Recipes matching the "#{@quick_search.search_term}"
    -else
      | Your Recipes

table.table.table-stripped.table-hover
  thead
    tr
      th Recipe Name
      th Usage
  tbody
    - @recipes.each do |recipe|
      tr
        th scope="row"= link_to recipe.name, new_recipe_checklist_path(recipe)
        th scope="row"= link_to "Applied #{recipe.checklists.count} times", recipe_checklists_path(recipe)

.text-center
  = link_to 'Create a new Checklist', main_app.new_checklist_path, class: 'btn btn-success btn-lg'
